// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum VideoStatus {
  UPLOADING
  PROCESSING
  READY
  FAILED
}

enum AssignmentStatus {
  PENDING
  SUBMITTED
  GRADED
}

// Пользователи системы
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Хешированный пароль
  image         String?
  role          UserRole  @default(STUDENT)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Связи
  accounts           Account[]
  sessions           Session[]
  coursesTeaching    Course[]              @relation("TeacherCourses")
  enrollments        CourseEnrollment[]
  videoProgress      VideoProgress[]
  assignments        AssignmentSubmission[]
  testResults        TestResult[]
  comments           Comment[]
  certificates       Certificate[]
  analyticsEvents    AnalyticsEvent[]

  @@map("users")
}

// NextAuth Account
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth VerificationToken
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Курсы
model Course {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  description String?
  thumbnail   String?
  category    String?
  status      CourseStatus @default(DRAFT)
  teacherId   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Связи
  teacher     User               @relation("TeacherCourses", fields: [teacherId], references: [id])
  lessons     Lesson[]
  enrollments CourseEnrollment[]
  tests       Test[]
  certificates Certificate[]

  @@index([teacherId])
  @@index([status])
  @@map("courses")
}

// Подписки студентов на курсы
model CourseEnrollment {
  id           String    @id @default(cuid())
  courseId     String
  studentId    String
  enrolledAt   DateTime  @default(now())
  completedAt  DateTime?
  progress     Float     @default(0) // Процент завершения 0-100

  // Связи
  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([courseId, studentId])
  @@index([studentId])
  @@map("course_enrollments")
}

// Уроки
model Lesson {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  slug        String
  description String?
  order       Int      @default(0)
  duration    Int?     // Длительность в секундах
  videoId     String?  @unique
  content     String?  // Текстовое содержание урока (Markdown)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  video       Video?       @relation(fields: [videoId], references: [id])
  assignments Assignment[]
  comments    Comment[]

  @@unique([courseId, slug])
  @@index([courseId])
  @@map("lessons")
}

// Видео файлы
model Video {
  id            String      @id @default(cuid())
  title         String
  originalPath  String      // Путь к оригинальному файлу в MinIO
  hlsPath       String?     // Путь к HLS плейлисту
  thumbnail     String?
  duration      Int?        // Длительность в секундах
  status        VideoStatus @default(UPLOADING)
  processingJob String?     // ID job'а для обработки
  metadata      Json?       // Дополнительные метаданные (размер, codec и т.д.)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Связи
  lesson        Lesson?
  progress      VideoProgress[]

  @@map("videos")
}

// Прогресс просмотра видео
model VideoProgress {
  id         String   @id @default(cuid())
  videoId    String
  userId     String
  position   Int      @default(0) // Позиция в секундах
  completed  Boolean  @default(false)
  lastWatched DateTime @default(now())

  // Связи
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([videoId, userId])
  @@index([userId])
  @@map("video_progress")
}

// Домашние задания
model Assignment {
  id          String   @id @default(cuid())
  lessonId    String
  title       String
  description String
  dueDate     DateTime?
  maxScore    Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  lesson      Lesson                 @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  submissions AssignmentSubmission[]

  @@index([lessonId])
  @@map("assignments")
}

// Сдача заданий
model AssignmentSubmission {
  id           String           @id @default(cuid())
  assignmentId String
  studentId    String
  content      String           // Ответ студента
  attachments  String[]         // Массив путей к файлам
  status       AssignmentStatus @default(PENDING)
  score        Int?
  feedback     String?
  submittedAt  DateTime         @default(now())
  gradedAt     DateTime?

  // Связи
  assignment Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student    User       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
  @@index([studentId])
  @@map("assignment_submissions")
}

// Тесты
model Test {
  id          String   @id @default(cuid())
  courseId    String
  title       String
  description String?
  timeLimit   Int?     // Лимит времени в минутах
  passingScore Int     @default(70) // Проходной балл в процентах
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Связи
  course    Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  questions TestQuestion[]
  results   TestResult[]

  @@index([courseId])
  @@map("tests")
}

// Вопросы теста
model TestQuestion {
  id            String   @id @default(cuid())
  testId        String
  question      String
  options       Json     // Массив вариантов ответа
  correctAnswer Json     // Правильный ответ (может быть один или несколько)
  points        Int      @default(1)
  order         Int      @default(0)
  createdAt     DateTime @default(now())

  // Связи
  test Test @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@index([testId])
  @@map("test_questions")
}

// Результаты тестов
model TestResult {
  id          String   @id @default(cuid())
  testId      String
  studentId   String
  answers     Json     // Массив ответов студента
  score       Int      // Набранные баллы
  maxScore    Int      // Максимальные баллы
  percentage  Float    // Процент правильных ответов
  passed      Boolean  @default(false)
  completedAt DateTime @default(now())

  // Связи
  test    Test @relation(fields: [testId], references: [id], onDelete: Cascade)
  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([testId])
  @@index([studentId])
  @@map("test_results")
}

// Комментарии к урокам
model Comment {
  id        String   @id @default(cuid())
  lessonId  String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связи
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([lessonId])
  @@index([userId])
  @@map("comments")
}

// Сертификаты
model Certificate {
  id           String   @id @default(cuid())
  courseId     String
  studentId    String
  certificateNumber String @unique
  issuedAt     DateTime @default(now())
  pdfPath      String?  // Путь к PDF файлу в MinIO

  // Связи
  course  Course @relation(fields: [courseId], references: [id])
  student User   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([courseId, studentId])
  @@index([studentId])
  @@map("certificates")
}

// События для аналитики
model AnalyticsEvent {
  id         String   @id @default(cuid())
  userId     String?
  eventType  String   // "page_view", "video_play", "course_complete" и т.д.
  eventData  Json?    // Дополнительные данные события
  occurredAt DateTime @default(now())

  // Связи
  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([eventType])
  @@index([occurredAt])
  @@map("analytics_events")
}
